{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/lib/*"]
    },
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "include": [
    "src/lib/**/*",
    "dist/**/*",
    "test/**/*",
    "./.eslintrc.js",
    "src/index.ts"
  ]
}
