{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["lib/*"]
    },
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "include": ["lib/**/*", "dist/**/*", "test/**/*", "./.eslintrc.js"]
}
